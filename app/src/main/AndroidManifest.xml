<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mastik.biology" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Biology" >
        <activity
            android:name=".AuthActivity"
            android:exported="false" />
        <activity
            android:name=".Settings"
            android:exported="false"
            android:theme="@style/Theme.Biology.Settings" />
        <activity
            android:name=".pdfView"
            android:exported="true" />
        <activity
            android:name=".Result"
            android:exported="true" >
            <intent-filter>
                <action android:name=".Result" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Questions"
            android:exported="true" >
            <intent-filter>
                <action android:name=".Fishes" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>